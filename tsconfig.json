{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "es2015",
      "es2016",
      "es2017"
    ],
    "strict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/js"
  },
  "exclude": [
    "node_modules"
  ]
}